<!DOCTYPE html>
<html lang="en">
  <head>
    <title>@model.docTitle</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="description" content="Alan Eicker: Full-Stack Developer, Interface Engineer, and Design Systems Evangelist with Design Experience." />
		<meta name="keywords" content="Alan, Eicker, developer, designer, engineer, front-end, creative, design, professional, Angular, React, Node.js, GraphQL, HTML, CSS, JavaScript" />
		<meta name="author" content="Alan Eicker" />
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
		<meta name="mobile-web-app-capable" content="yes">
		<meta name="application-name" content="Alan Eicker UI Engineer">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-title" content="Alan Eicker UI Engineer">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta name="theme-color" content="#000000">
		<meta name="format-detection" content="telephone=no">
		<link rel="manifest" href="manifest.json">
		<link rel="icon" type="image/x-icon" href="favicon.ico">
		<link rel="canonical" href="https://www.alaneicker.com" />
		<base href="/">
    <link href="styles/app.css" rel="stylesheet">
  </head>
  <body>
    <div class="l-page">
      <header class="l-page__header">
        <nav>
          <ul class="c-main-nav">
            @model.mainNavLinks.forEach(function (link) {
              <li><a class="@link.class" href="@link.url">@link.text</a></li>
            })
          </ul>
        </nav>
      </header>
      <div class="l-page__body">
        <div class="c-hero @(model.isHome !== true ? 'c-hero--condensed' : '')"> 
          <div class="c-hero__content">
            <img class="c-hero__profile-image" src="images/profile-pic.png" alt="profile image" />
            <h1 class="c-hero__heading">@model.heroHeading</h1>
            <h2 class="c-hero__subheading">@model.heroSubHeading</h2>
            <div class="c-hero__text-content">@model.heroContent</div>
          </div>
        </div>
        <div class="l-page__main">
          <div class="l-page__content">
            @html.block('body')
          </div>
          <footer class="c-footer">
            <div class="c-footer__content">
              <div>@html.raw(model.copyright)</div>
              <div>@model.phone &bull; <a class="is-inverse" href="mailto:@model.email">@model.email</a></div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>